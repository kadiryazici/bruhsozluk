{
   "compilerOptions": {
      "baseUrl": ".",
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "downlevelIteration": true,
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "outDir": "./dist/",
      "rootDir": "./src/",
      "paths": {
         "@helpers/*": ["src/helpers/*"],
         "@get/*": ["src/server/get/*"],
         "@post/*": ["src/server/post/*"],
         "@put/*": ["src/server/put/*"],
         "@delete/*": ["src/server/delete/*"],
         "@middleware/*": ["src/server/middleware/*"],
         "@db": ["src/db.ts"],
         "@type": ["src/types.d.ts"],
         "@messages": ["src/server/messages/index.ts"],
         "@config": ["src/server/config/index.ts"],
         "/*": ["./*"]
      }
   },
   "include": ["src/**/*"]
}
