{
   "compilerOptions": {
      "baseUrl": ".",
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "types": ["vite"],
      "moduleResolution": "Node",
      "downlevelIteration": true,
      "paths": {
         "/*": ["./*"]
      }
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"]
}
